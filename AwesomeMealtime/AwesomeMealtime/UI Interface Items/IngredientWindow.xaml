<Window x:Class="AwesomeMealtime.UI_Interface_Items.IngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AwesomeMealtime.UI_Interface_Items"
        mc:Ignorable="d"
        Title="IngredientWindow" Height="189.811" Width="327.039">
    <Grid x:Name="Add" Margin="0,0,0.5,-4.5" Background="#4DB760">
        <Label Content="Name: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Background="#ABEDB7"/>
        <Button x:Name="btnAccept" Content="Accept" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="btnAccept_Click" IsEnabled="False" Background="#FFBC7B"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="90,0,0,10" Width="76" IsCancel="True" Height="20" VerticalAlignment="Bottom" Background="#FFBC7B"/>
        <TextBox x:Name="tbxName" Height="23" Margin="62,13,10,0" TextWrapping="Wrap" Text="Name Me!" VerticalAlignment="Top" Background="#EA927F" TextChanged="tbxName_TextChanged"/>
        <ScrollViewer Background="#ABEDB7" Margin="10,71,40,35">
            <StackPanel x:Name="spl_Stuff"/>
        </ScrollViewer>
        <Button x:Name="btnAdd" Content="+" Margin="0,38,10,0" VerticalAlignment="Top" Height="23" Click="btnAdd_Click" HorizontalAlignment="Right" Width="24" Background="#FFBC7B"/>
        <Button x:Name="btnSub" Content="-" Margin="0,66,10,0" VerticalAlignment="Top" Height="23" Click="btnSub_Click" HorizontalAlignment="Right" Width="24" Background="#FFBC7B"/>
        <TextBox x:Name="tbxAmount" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="Judge Me!" VerticalAlignment="Top" Width="75" Background="#EA927F" TextChanged="tbxName_TextChanged"/>
        <TextBox x:Name="tbxDate" Height="23" Margin="0,38,39,0" TextWrapping="Wrap" Text="End Me!" VerticalAlignment="Top" TextChanged="tbxName_TextChanged" HorizontalAlignment="Right" Width="68" Background="#EA927F"/>
        <ComboBox x:Name="cbbMeasureType" HorizontalAlignment="Left" Margin="90,38,0,0" VerticalAlignment="Top" Width="108" Background="#ABEDB7"/>
    </Grid>
</Window>
