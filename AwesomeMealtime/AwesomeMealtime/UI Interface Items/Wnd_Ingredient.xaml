<Window x:Class="AwesomeMealtime.UI_Interface_Items.Wnd_Ingredient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AwesomeMealtime.UI_Interface_Items"
        mc:Ignorable="d"
        Title="Wnd_Ingredient" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel Name="sp_Content">
                <TextBox Name="tb_Name" HorizontalAlignment="Left" Height="21" Margin="100,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="80"/>

            </StackPanel>
        </ScrollViewer>
        <Button Name="Save" Content="Save Changes" HorizontalAlignment="Left" Height="24" Margin="35,0.143,0,0" Grid.Row="1" VerticalAlignment="Top" Width="91" Click="Save_Click"/>
        <Button Name="Revert" Content="Reverse Changes" HorizontalAlignment="Left" Height="24" Margin="155,0.143,0,0" Grid.Row="1" VerticalAlignment="Top" Width="96" Click="Revert_Click"/>
    </Grid>
</Window>
